<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PersegiPanjangFragment" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/panjang" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.285"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lebar"
                app:layout_constraintStart_toStartOf="@+id/panjang"
                app:layout_constraintEnd_toEndOf="@+id/panjang" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/panjang" app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_hasil" app:layout_constraintStart_toStartOf="@+id/lebar"
                app:layout_constraintEnd_toEndOf="@+id/lebar" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/lebar" app:layout_constraintHorizontal_bias="0.488"/>
        <TextView
                android:text="Luas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_result"
                app:layout_constraintStart_toStartOf="@+id/lebar"
                app:layout_constraintEnd_toEndOf="@+id/lebar" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hasil" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:id="@+id/hasil_jumlah_luas" app:layout_constraintStart_toEndOf="@+id/txt_result"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/txt_result"
                app:layout_constraintBottom_toBottomOf="@+id/txt_result" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="keliling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/txt_result"
                app:layout_constraintEnd_toEndOf="@+id/txt_result" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_result"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hasil_jumlah_keliling" app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" android:layout_marginTop="24dp"
                app:layout_constraintVertical_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>